<resources>
    <!-- loading框 -->
    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 基础 Button，一般不直接使用 -->
    <style name="BaseButton" parent="android:Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 基础 BaseEditText，一般不直接使用 -->
    <style name="BaseEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 基础 TextView，一般不直接使用 -->
    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_content_grey">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="text_title_grey" parent="text_content_grey">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="text_title_black" parent="text_title_grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>
    <style name="NoPaadingDivider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_grey</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    <style name="NoPaadingDivider2" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/divider_grey</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    <style name="NoPaadingVertical" >
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_grey</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
