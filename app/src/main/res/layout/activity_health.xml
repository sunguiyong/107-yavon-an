<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <include layout="@layout/header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="vertical"
        android:background="@mipmap/health_yuan"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:text="HI"
          android:textSize="@dimen/text_18"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_15"
          />
       <TextView
           android:id="@+id/tv_time"
           android:layout_marginTop="@dimen/dp_15"
           android:layout_marginLeft="@dimen/dp_15"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_18"
           android:textColor="@color/white"
           android:text="15050183772下午好"
           />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:background="@drawable/shape_stroke_health"
            >
        <TextView
            android:id="@+id/tv_tijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体检"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/text_15"
            android:textColor="@color/black"
            />
        </LinearLayout>
       <TextView
           android:id="@+id/tv_shengyu"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="剩余电量0%"
           android:layout_marginTop="@dimen/dp_10"
           />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_15"
        android:gravity="center"
        android:background="@drawable/shape_yuanhealth"
        >
     <TextView
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:text="心率"
         android:layout_marginLeft="@dimen/dp_10"
         android:drawableLeft="@mipmap/hetlth_xin"
         android:textSize="@dimen/dp_15"
         android:drawablePadding="@dimen/dp_15"
         android:textColor="@color/black"
         />
        <TextView
            android:id="@+id/tv_xin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_xindate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/shape_yuanhealth"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="血氧"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/health_xue"
                android:textSize="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_xueci"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_xuedate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/shape_yuanhealth"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="血压"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/health_ya"
                android:textSize="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_yaci"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_yadate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/shape_yuanhealth"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="呼吸频率"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/health_hu"
                android:textSize="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_huci"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_hudate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/shape_yuanhealth"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="末稍循环"
                android:layout_marginLeft="@dimen/dp_10"
                android:drawableLeft="@mipmap/health_shao"
                android:textSize="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_shaoci"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_shaodate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
