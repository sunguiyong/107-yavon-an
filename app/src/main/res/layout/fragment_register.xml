<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText

                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/selector_phone"
                android:drawablePadding="10dp"
                android:hint="请输入11位手机号码"
                android:textSize="@dimen/sp_14"
                android:id="@+id/et_phone" />

            <TextView
                android:id="@+id/tv_get_notify"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/et_phone"
                android:layout_alignBottom="@+id/et_phone"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_stroke_green"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="获取验证码"
                android:textColor="@color/mainGreen" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_notify"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/selector_key"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_psd"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/selector_password"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/et_psd_again"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/selector_password"
            android:drawablePadding="10dp"
            android:hint="请再次输入密码"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/selector_login"
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="同意雅风注册协议"
            android:textColor="@color/mainGray" />
        <TextView
            android:id="@+id/tv_register"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/mainGreen"
            android:gravity="center"
            android:background="@drawable/shape_stroke_green"
            android:text="注           册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="已有账号，立即登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
