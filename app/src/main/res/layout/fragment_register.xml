<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblack"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/selector_phone"
                android:drawablePadding="10dp"
                android:hint="请输入11位手机号码"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_get_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_stroke_code"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_divider_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_divider" />

        <com.zt.igreen.widget.CustomEditText
            android:id="@+id/et_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:customHint="请输入验证码"
            app:drawablePadding="10dp"
            app:iconDrawable="@drawable/selector_key"
            app:paddingBottom="10dp"
            app:paddingTop="10dp"
            app:textSize="14sp" />

        <com.zt.igreen.widget.CustomEditText
            android:id="@+id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:customHint="请输入密码"
            app:drawablePadding="10dp"
            app:iconDrawable="@drawable/selector_password"
            app:paddingBottom="10dp"
            app:paddingTop="10dp"
            app:passwordTag="true"
            app:textSize="14sp" />

        <com.zt.igreen.widget.CustomEditText
            android:id="@+id/et_psd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:customHint="请再次输入密码"
            app:drawablePadding="10dp"
            app:iconDrawable="@drawable/selector_password"
            app:paddingBottom="10dp"
            app:paddingTop="10dp"
            app:passwordTag="true"
            app:textSize="14sp" />
<RelativeLayout
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_login"
        android:drawablePadding="3dp"
        android:text="同意雅风注册协议"
        android:textColor="@color/mainGray" />
</RelativeLayout>


        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/newaccount_tv"
            android:gravity="center"
            android:padding="10dp"
            android:text="注           册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="已有账号，立即登录"
            android:textColor="@color/white" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
