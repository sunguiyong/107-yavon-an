<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <include layout="@layout/header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="设备ID:"
        />
        <TextView
            android:id="@+id/tv_deviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#EAEAEA"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报修原因描述"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/black"
        />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_marginTop="@dimen/dp_8"
          android:background="@drawable/shape_baoxiu"
          >
      <EditText
          android:id="@+id/ed_suggess"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:textColor="@color/black"
          android:padding="5dp"
          android:lines="5"
          android:textSize="13sp"
          android:gravity="top"
          />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center|left"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="姓名:"
          android:textColor="@color/black"
          />
        <EditText
            android:id="@+id/ed_compandy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="请输入公司名称"
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#EAEAEA"
            />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp_70"
         android:orientation="horizontal"
         android:gravity="center|left"
         >
     <LinearLayout
         android:id="@+id/lin_man"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
     <ImageView
         android:id="@+id/img_man"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/choose_select"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black"
         android:layout_marginLeft="@dimen/dp_10"
         android:text="男士"
         />
     </LinearLayout>
         <LinearLayout
             android:id="@+id/lin_nv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="@dimen/dp_30"
             >
             <ImageView
                 android:id="@+id/img_nv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@mipmap/choose_noselect"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:layout_marginLeft="@dimen/dp_10"
                 android:text="女士"
                 />
         </LinearLayout>
     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#EAEAEA"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="请输入手机号码"
                android:background="@null"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>
        <TextView
            android:id="@+id/tv_submit"
            android:padding="10dp"

            android:layout_margin="@dimen/dp_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_stroke_green"
            android:text="提          交"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@color/mainGreen"
            android:text="客服电话: 40099-30088"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
