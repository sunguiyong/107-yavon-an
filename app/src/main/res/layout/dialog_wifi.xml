<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/title_wifi"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/et_pwd_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_lock_pwd"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape_edittext_bk"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">
      <TextView
          android:id="@+id/left_wifi"
          android:text="当前WiFi:"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:text=""
          android:textColor="@color/black"
          android:id="@+id/tv_current_wifi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:layout_marginLeft="5dp"
          android:layout_toRightOf="@+id/left_wifi"/>
        <TextView
            android:id="@+id/tv_change_wifi"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/mainGreen"
            android:text="更换网络"
            />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider_grey"/>
        <TextView
            android:id="@+id/btn_confirm_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/confirm"
            android:padding="15dp"
            android:gravity="center"
            />
</LinearLayout>
