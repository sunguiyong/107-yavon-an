<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <!--android:background="@drawable/shape_device_item_bg"-->
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="办公室"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_item_lock" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:id="@+id/first_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_author_dev1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/selector_round_3"
                        android:paddingLeft="5dp"
                        android:paddingTop="1.2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1.2dp"
                        android:textColor="@color/switch_text_select11"
                        android:textSize="11sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/select_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selector_cb_check"
                        android:visibility="invisible" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/tv_author_dev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/selector_round_3"
                        android:paddingLeft="5dp"
                        android:paddingTop="1.2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1.2dp"
                        android:text="已授权"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="智能台灯"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="设备关闭"
                        android:textColor="#D7D8D8"
                        android:textSize="11sp" />


                    <!--<TextView-->
                    <!--android:id="@+id/tv_author_dev"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/selector_round_3"-->
                    <!--android:paddingLeft="5dp"-->
                    <!--android:paddingTop="1.2dp"-->
                    <!--android:paddingRight="5dp"-->
                    <!--android:paddingBottom="2.2dp"-->
                    <!--android:textColor="@color/switch_text_select7"-->
                    <!--android:textSize="11sp" />-->


                    <ImageView
                        android:id="@+id/cb_power"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:clickable="true"
                        android:drawableTop="@drawable/selector_cb_power"
                        android:src="@mipmap/main_open"
                        android:textSize="0sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/black_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/shape_device_item_obg"
        android:visibility="gone" />

</FrameLayout>

