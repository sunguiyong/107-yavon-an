<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lin_rv"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_device_item_bg"
    >
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:textColor="#999999"
            android:text="办公室"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_item_lock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能台灯"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="设备关闭"
                        android:textColor="#D7D8D8"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/tv_author_dev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/switch_text_select7"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1.2dp"
                        android:paddingBottom="2.2dp"
                        android:textSize="11sp"
                        android:background="@drawable/selector_round_3"
                        />
                    <TextView
                        android:id="@+id/tv_author_dev1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/switch_text_select11"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1.2dp"
                        android:paddingBottom="2.2dp"
                        android:textSize="11sp"
                        android:visibility="gone"
                        android:background="@drawable/selector_round_3"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cb_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:button="@null"
        android:drawableTop="@drawable/selector_cb_power"
        android:padding="8dp"
        android:clickable="true"
        android:textSize="0sp" />


    <View
        android:id="@+id/black_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/shape_device_item_obg"
        android:visibility="gone"
        />
</FrameLayout>

