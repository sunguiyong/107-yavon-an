<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zt.yavon.module.deviceconnect.view.DeviceAddActivity">

    <include layout="@layout/header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@color/alpha_05_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/re_device_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.jude.easyrecyclerview.EasyRecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/re_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.jude.easyrecyclerview.EasyRecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
