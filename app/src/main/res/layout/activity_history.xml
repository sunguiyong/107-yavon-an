<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    >
    <include layout="@layout/header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/lin_base"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center"
        android:background="@drawable/shape_hitoryhealth_select"
        >
    <TextView
        android:id="@+id/tv_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="基础指标"
        />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_yali"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_hitoryhealth"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_yali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压力疲劳"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_xueguan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_hitoryhealth"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            >
            <TextView
                android:id="@+id/tv_xueguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血管健康"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="@color/white"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
