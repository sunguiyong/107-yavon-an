<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F8"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <include layout="@layout/header"
        android:background="@color/qingse"
        />

    <LinearLayout
        android:id="@+id/layout_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/qingse"
        android:orientation="horizontal"
        android:paddingBottom="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >
        <ImageView
            android:id="@+id/iv_avatar_mine"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@mipmap/avatar_default"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="14.5sp" />

            <TextView
                android:id="@+id/tv_phone_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="手机号码"
                android:textColor="@color/white"
                android:textSize="14.5sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:src="@mipmap/next_w" />
    </LinearLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_5_white_bg"
    android:padding="20dp"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_170"
    android:layout_marginBottom="@dimen/dp_15"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/setting"
                android:drawablePadding="15dp"
                android:paddingBottom="20dp"
                android:text="@string/setting"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/divider_grey" />

            <TextView
                android:id="@+id/tv_about_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/about"
                android:drawablePadding="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/about"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/divider_grey" />

            <TextView
                android:id="@+id/tv_about_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ziliao"
                android:drawablePadding="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="资料"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/divider_grey" />

            <TextView
                android:id="@+id/tv_dev_all_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/dev_all"
                android:drawablePadding="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/all_dev"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/divider_grey" />
        </LinearLayout>
</RelativeLayout>
</RelativeLayout>
