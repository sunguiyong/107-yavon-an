<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:background="@color/white"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="82dp"
      android:orientation="horizontal"
      >
 <LinearLayout
     android:layout_width="0dp"
     android:layout_weight="5"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_marginLeft="@dimen/dp_10"
     >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_23"
      android:orientation="horizontal"
      android:gravity="center|left"
      android:layout_marginLeft="@dimen/dp_18"
      >
      <TextView
          android:id="@+id/tv_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#8A8A8A"
          android:text=""
          />
      <TextView
          android:id="@+id/tv_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#8A8A8A"
          android:text=""
          android:layout_marginLeft="@dimen/dp_4"
          />
  </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="62dp"
     android:orientation="horizontal"
     android:gravity="center"
     >
     <LinearLayout
         android:id="@+id/lin_xueguan"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:visibility="gone"
         android:gravity="center|left"
         >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="血管健康阶段:"
          android:layout_marginLeft="@dimen/dp_23"
          android:textColor="#9D9D9D"
          />
         <TextView
             android:id="@+id/tv_xueguan"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:layout_marginLeft="@dimen/dp_8"
             android:textColor="@color/black"
             />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/lin_xinlv"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">

         <TextView
             android:id="@+id/tv_xinlv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@color/black" />

         <TextView
             android:id="@+id/tv_xinlv_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:text="心率"
             android:textColor="#9F9F9F" />
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lin_xueyang"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">

         <TextView
             android:id="@+id/tv_xueyang"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@color/black" />

         <TextView
             android:id="@+id/tv_xueyang_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:text="血氧"
             android:textColor="#9F9F9F" />
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lin_xueya"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:id="@+id/tv_xueya"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@color/black" />

         <TextView
             android:id="@+id/tv_xueya_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:text="血压"
             android:textColor="#9F9F9F" />
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lin_huxi"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:id="@+id/tv_huxi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@color/black" />

         <TextView
             android:id="@+id/tv_huxi_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:text="呼吸频率"
             android:textColor="#9F9F9F" />
     </LinearLayout>

     <LinearLayout
         android:id="@+id/lin_xunhuan"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:id="@+id/tv_xunhuan"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textColor="@color/black" />

         <TextView
             android:id="@+id/tv_xunhuan_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="6dp"
             android:text="末稍循环"
             android:textColor="#9F9F9F" />
     </LinearLayout>
 </LinearLayout>

 </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:gravity="center|left"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/arrow_right"
          />
    </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#EEEEEE"
        />
</LinearLayout>
