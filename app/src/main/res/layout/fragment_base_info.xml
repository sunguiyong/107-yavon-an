<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zt.igreen.module.mine.view.BaseInfoFragment"
    android:orientation="vertical"
    android:background="#F7F8F8"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/lin_one"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_gravity="center|left"
        android:textColor="#E21E1E"
        />
        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:layout_gravity="center|left"
            android:textColor="@color/colorPrimary1"
            />
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="right"
       >
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/colorPrimary1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right"
        android:layout_gravity="center|right"
        />
</LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/divider_white"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/lin_two"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_gravity="center|left"
            android:textColor="#E21E1E"
            />
        <TextView
            android:id="@+id/tv_name_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身高"
            android:layout_gravity="center|left"
            android:textColor="@color/colorPrimary1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_unit_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_gravity="center|right"
                android:textColor="@color/colorPrimary1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_gravity="center|right"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/divider_white"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/lin_three"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_gravity="center|left"
            android:textColor="#E21E1E"
            />
        <TextView
            android:id="@+id/tv_name_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:layout_gravity="center|left"
            android:textColor="@color/colorPrimary1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_unit_weight"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:textColor="@color/colorPrimary1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_gravity="center|right"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/divider_white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/lin_four"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_gravity="center|left"
            android:textColor="#E21E1E"
            />
        <TextView
            android:id="@+id/tv_name_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重"
            android:layout_gravity="center|left"
            android:textColor="@color/colorPrimary1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/tv_unit_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/colorPrimary1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                android:layout_gravity="center|right"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/divider_white"
        android:visibility="gone"
        android:orientation="horizontal"
        />
</LinearLayout>
