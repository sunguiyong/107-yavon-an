<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zt.yavon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.zt.yavon.MyApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--<activity android:name=".module.guide.GuideActivity">-->
        <activity android:name=".module.device.lock.view.LockDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.device.lock.view.MoreSettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".module.device.lock.view.DirectUseActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".module.device.lock.view.LockRecordActivity"
            android:screenOrientation="portrait"/>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>
        <!--<activity android:name=".module.home.MainActivity"-->
            <!--android:screenOrientation="portrait"/>-->
    </application>

</manifest>